<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_splash"
    app:layoutDescription="@xml/activity_splash_scene">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/view_splash_black_background"
        />

    <ImageView
        android:layout_width="540dp"
        android:layout_height="900dp"
        android:src="@drawable/splash_image"
        android:id="@+id/imageview_splash_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:gravity="start"
        android:fontFamily="@font/notosans_bold"
        android:id="@+id/textview_splash_ment1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.75"
        android:text="Tell us your story"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:fontFamily="@font/notosans_bold"
        android:id="@+id/textview_splash_ment2"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="start"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Take your own music"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="with Story Musician"
        android:id="@+id/textview_splash_ment3"
        android:gravity="start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/notosans_bold"
        app:layout_constraintVertical_bias="0.89"

        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        />

    <View
        android:id="@+id/view_splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/all_brightbackground_fullsize"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/temp"
        android:background="@color/black"
        />
</androidx.constraintlayout.motion.widget.MotionLayout>
